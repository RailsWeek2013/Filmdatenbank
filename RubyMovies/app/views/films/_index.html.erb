<div id="filme">
<table>
  <tbody>
    <% @active_films.each do |film| %>
      <tr>
        <td>
          <%= image_tag(film.picture) %>
        </td>
        <td>
          <strong><%= film.title %></strong>
          <br />
          <% @film = film %>
          <%= render 'review' %>
          <br />
          <%= render 'tags' %>
          <br />
          <%= link_to 'Details', film %>
          <br />
          <br />
          <% if user_signed_in? %>
            <% if current_user.admin? || current_user.moderator? %>
              <%= link_to 'Bearbeiten', edit_film_path(film) %>
            <% end %>
            <% if current_user.admin? %>
              <%= link_to 'Entfernen', film, method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
  <div id="cloud">
    <h3>Filme nach Kategorien</h3>
    <%= render 'cloud' %>
  </div>