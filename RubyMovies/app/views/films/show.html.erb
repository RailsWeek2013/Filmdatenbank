<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @film.title %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @film.picture %>
</p>

<p>
  <strong>Description:</strong>
  <%= @film.description %>
</p>

<p>
  <strong>Link:</strong>
  <%= @film.link %>
</p>

<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', films_path %>
<%= link_to 'Kommentar hinzufügen', new_film_comment_path(@film) %>

<h3>Kommentare:</h3>
<% if @comments.empty? %>
	<p>Keine Kommentare vorhanden!</p>
<% end %>
<br/>
<% @comments.each do |comment| %>
	Von: <%= comment.user.name %>
	<p><%= comment.text %></p>
  <% if admin_signed_in? || moderator_signed_in? %>
    <%= link_to 'Kommentar löschen', comments_destroy_path(comment), method: :delete %>
  <% end %>
<% end %>