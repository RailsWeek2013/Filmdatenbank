<h2>Vorgeschlagene Filme</h2>

<% if @films.empty? %>
<p>Zur Zeit keine vorgeschlagenen Filme vorhanden.</p>
<% else %>
<table>
  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td>
          <%= image_tag(film.picture) %>
        </td>
        <td>
          <span style="font-size: 150%"><%= film.title %></span>
          <br />
          <br />
          <% @film = film %>
          <%= render 'tags' %>
          <br />
          <%= link_to 'Details', film %>
          <br />
          <br />
            <% if admin_signed_in? || moderator_signed_in? %>
              <%= link_to "In Filmliste aufnehmen", active_film_url(film.id), method: :post %>
              <%= link_to 'Bearbeiten', edit_film_path(film) %>
            <% end %>
            <% if admin_signed_in? %>
              <%= link_to 'Entfernen', film, method: :delete, data: { confirm: 'Sind Sie sicher?' } %>
          <% end %>
        </td>
      </tr>

