<% unless messages.empty? %>

  <table>
    <thead>
      <tr>
        <% if sender %>
          <th>Von</th>
        <% else %>
          <th>An</th>
        <% end %>
        <th>Datum</th>
        <th>Betreff</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% messages.each do |message| %>
        <tr>
          <% if sender %>
            <td><%= message.sender.name %></td>
          <% else %>
            <td><%= message.recipient.name %></td>
          <% end %>
          <td><%= message.created_at.to_formatted_s(:db) %></td>
          <td><%= message.subject %></td>
          <td><%= link_to 'lesen', message %></td>

          <td><%= link_to 'lÃ¶schen', delete_message_path(message.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
  <%= error %>

<% end %>