<%= render 'link' %>
<h1>Postausgang</h1>


<h2>Gesendete Nachrichten</h2>
<% unless @messages.empty? %>

  <table>
    <thead>
      <tr>
        <th>An</th>
        <th>Datum</th>
        <th>Betreff</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.recipient.name %></td>
          <td><%= message.created_at.to_formatted_s(:db) %></td>
          <td><%= message.subject %></td>
          <td><%= link_to 'lesen', message %></td>

          <td><%= link_to 'lÃ¶schen', delete_message_path(message.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  Keine gesendeten Nachrichten vorhanden.

<% end %>