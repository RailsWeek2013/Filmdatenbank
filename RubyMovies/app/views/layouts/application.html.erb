<!DOCTYPE html>
<html>
<head>
	<title>RubyMovies</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<h1>RubyMovies</h1>
	<%= link_to_unless_current "Alle Filme", root_path %>
	<%= link_to_unless_current 'Top-Filme', films_top_path %>
	<% if user_signed_in? %>
            <% if current_user.admin? || current_user.moderator? %>
            	<%= link_to_unless_current "Vorgeschlagene Filme", suggested_films_url %>
            	 <% s = "Film hinzufÃ¼gen" 
             else 
            	 s = "Film vorschlagen" 
             end %>
            <%= link_to_unless_current s, new_film_path %>
            <% 	if current_page?(controller: 'messages', action: 'outbox') || current_page?(controller: 'messages', action: 'new') || current_page?(controller: 'messages', action: 'index')
            		disabled = true
            	end %> 
            <%= link_to_unless(disabled, "Nachrichten(#{new_message_count})", inbox_messages_path) %>
            <% if admin_signed_in? %>
            	<%= link_to_unless_current('Administration', manageUser_url) %>
            <% end %>
            <%= link_to_unless_current('Logout', destroy_user_session_path, :method => :delete) %>
	<% else %>
		<%= link_to_unless_current('Registrierung', new_user_registration_url)  %>	
		<%= link_to('Login', new_user_session_url)  %>	
	<% end %>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<%= yield %>

</body>
</html>
